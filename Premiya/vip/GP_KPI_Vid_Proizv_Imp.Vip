 <. Продолжить .>  <.   Отмена   .>
>>
end;


HandleEvent
  cmInit:
  { nm_file:='';
    if not ReadMyDsk(nm_file,'GP_KPI_DOC_Vid_Proizv_Imp_nm_file',False)
      nm_file:='d:\Galaxy\RedMine\_GP\KPI\Sverka\Подразделения_по_видам_производств_уточненная_от_Козлова_Л.П..xlsx' ;
    logfilenm:=GetStringParameter('Files','OutputFilesDirectory',0)
                               +'!TimeLog.log';
    timelog_init;
  }
  cmDone:
  {

  }
  cmOk:
  { SaveMyDsk(nm_file,'GP_KPI_DOC_Vid_Proizv_Imp_nm_file');

    StartNewVisual(vtNumericVisual, vfTimer, 'Ждите, идет сбор данных', 0);
    FormDoc;
    StopVisual('',0);
  }
  cmCheckField:
  { case curField of
    #nm_file:
    { if not FileExist(nm_file) message('Файл не найден!');

    }
    end;
  }
  cmPick:
  { case CurField of
    #nm_file:
    { var ww_str:string=GetFileName('*.xlsx','Выберите файл процентами премий из КИС');
      if ww_str<>'' set nm_file:=ww_str;
    }
    end;
  }
  end;

end.
