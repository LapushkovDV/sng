#include epSystem.vih
#include SNG_StaticFunctions.Vih

#component "SNG_COMMON"
//-------------------------------------
// перед входом в Галактику
handler with replace SNG_COMMON__InitApp on ExtensionPoint epAppInit
Action
{ Result:=True;
  if not RegisterGlobalIfc('SNG_COMMON::SNG_StaticFunctions')
  { message('Ошибка регистрации SNG_COMMON::SNG_StaticFunctions');
  }
  var _tmp : word;
  _Try {
    _tmp := PosR('s','____s');    //для проверки _Raise ExInternalError;
  }
  _except
  else
  { if Message('Ошибка загрузки объекта SNG_COMMON::SNG_StaticFunctions'
     +chr(13)+'Обратитесь к администратору БД'
     +chr(13)+'Требуется пересборка ресурсов SNG_COMMON*'
     +chr(13)+'Работа части функционала будет невозможна!'
     +chr(13)+'Продолжить работу?',YesNo)<>cmYes
    { Result:=False;
    }
  }
}
